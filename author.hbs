{{!< default }}
<aside class="sidebar hide-on-small-only">
		{{> sidebar }}
</aside>
<main class="main">
    <div class="hide-on-med-and-up">
				{{> navbar }}
    </div>
    <section>
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1">
		                {{#author }}
                        <div class="row">
                            <div class="col s3">
		                            <div class="circular-image">
                                    <img src="{{image}}" alt="author avatar">
		                            </div>
                            </div>
                            <div class="col s9 white-text">
		                            <h4 class="center aligned">Articles by {{ name }}</h4>
		                            <p class="center aligned">{{ bio }}</p>
                            </div>
                        </div>
		                {{/author}}
                </div>
            </div>
        </div>
				{{> loop/default }}
    </section>
</main>
{{> footer }}